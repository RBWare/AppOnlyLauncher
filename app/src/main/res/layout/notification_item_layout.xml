<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/notification_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notification_item_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="6dp"
            />

        <TextView
            android:id="@+id/notification_item_app_title"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:gravity="top"

            />

        <TextView
            android:id="@+id/notification_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9m ago"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:fontFamily="sans-serif-light"
            />
    </LinearLayout>

    <!-- NOTIFICATION TITLE -->
    <TextView
        android:id="@+id/notification_item_title"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- NOTIFICATION DESCRPTION -->
    <TextView
        android:id="@+id/notification_item_description"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"/>
</LinearLayout>